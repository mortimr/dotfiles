[colors]
transparent = #00000000
foreground = #ffebdbb2
foreground-alt = #ffebdbb2
background-alt = #00000000
background = #00000000
black = #7c6f64
dgrey = #928374
dred = #cc241d
red = #fb4934
alert = #fb4934
dgreen = #98971a
green = #b8bb26
dyellow = #d79921
yellow = #fabd2f
dblue = #458588
blue = #83a598
primary = #83a598
dmagenta = #b16286
magenta = #d3869b
dcyan = #689d6a
cyan = #8ec07c
lgrey = #a89984
white = #ebdbb2
mainBlue = #188AE2

tblack = #00000000
tred = #80fb4934
tgreen = #80b8bb26
tyellow = #80fabd2f
tblue = #8083a598
tmagenta = #80d3869b
tcyan = #808ec07c
twhite = #ffffffff
tgrey = #33333333


[global/wm]
margin-top = 0
margin-bottom = 5

[bar/top]
width = 100%
height = 40
offset-x = 0
offset-y = 0

locale = en_US.UTF-8

background = ${colors.tblack}
foreground = ${colors.foreground}

font-0 = Roboto:size=17
font-1 = Inconsolata for Powerline\-dz:size=15;0

modules-center = bspwm

tray-position = right
tray-padding = 2
tray-background = ${colors.tblack}
tray-transparent = true

underline-size = 3

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.twhite}
label-focused-underline= ${colors.mainBlue}
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = ${colors.mainBlue}
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.tgrey}
label-empty-padding = 2


[module/xwindow]
type = internal/xwindow
label = %title:0:70:...%

[module/i3]
type = internal/i3
strip-wsnumbers = true

ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 3
ws-icon-3 = 4
ws-icon-4 = 5

format = <label-state> <label-mode>

label-mode-foreground = ${colors.background}
label-mode-background = ${colors.dyellow}
label-mode-padding = 1

label-focused-foreground = ${colors.magenta}
label-focused-background = ${colors.tmagenta}
label-focused-underline = ${colors.dmagenta}
label-focused-padding = 1

label-unfocused-padding = 1

label-urgent-background = ${colors.tred}
label-urgent-underline = ${colors.dred}
label-urgent-padding = 1

label-visible-background = ${colors.tgreen}
label-visible-underline = ${colors.dgreen}
label-visible-padding = 1

[module/repoInfo]
type = custom/script
exec = eval $HOME/.config/polybar/gitInfo.polybar.fish
interval = 1
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
format-background = ${colors.tyellow}
format-underline = ${colors.dyellow}
format-padding = 2
label =   %percentage%

[module/spotify]
type = custom/script
exec = BLOCK_INSTANCE=spotify $HOME/.bin/mediaplayer
label =   %output:0:30:...%
format-foreground = #aacf00
format-background = #80aacf00
format-underline = #aacf00
format-padding = 2
interval = 5
exec-if = pgrep -x spotify

[module/mediaplayer]
type = custom/script
exec = BLOCK_INSTANCE=DeaDBeeF $HOME/.bin/mediaplayer
label =   %output:0:30:...%

format-underline = ${colors.dblue}
format-padding = 2
interval = 5
format-background = ${colors.tblue}
exec-if = pgrep deadbeef

[module/volumeintel]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
master-mixer = Master
label-muted =  muted

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
format-volume-underline = ${colors.dgreen}
format-volume-padding = 2
mapping = true
format-volume-background = ${colors.tgreen}

[module/volumeasus]
type = internal/volume
format-volume = <label-volume>
master-mixer = PCM
label-muted =  muted

label-volume =  %percentage%
format-volume-underline = ${colors.dgreen}
format-volume-padding = 2
mapping = true
format-volume-background = ${colors.tgreen}

[module/temperature]
type = custom/script
exec = $HOME/.bin/temperature.sh
interval = 10
label =   %output%
format-underline = ${colors.dred}
format-padding = 2
format-background = ${colors.tred}

[module/date]
type = internal/date
interval = 2

date = "  %d.%m.%Y"
date-alt = "  %A, %d. %B"

time = "%H:%M"
time-alt = "%H:%M:%S"

format-underline = ${colors.dcyan} 
format-padding = 2
label = "%{A3:gsimplecal:}%date% | %time%%{A}"

format-background = ${colors.tcyan}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage% (%time%)

format-full-prefix = "  "
format-underline = ${colors.dblue}
format-padding = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

format-background = ${colors.tblue}

